<?xml version="1.0" encoding="utf-8"?>

                                                  
                                                       
                                                     

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:tag="layout/activity_main_0" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" tools:context="com.cncoding.teazer.MainActivity">

        <TextureView
            android:id="@+id/welcome_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true" />

        <FrameLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/up_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_previous_white"
            android:foreground="@drawable/ripple_dark"
            android:padding="@dimen/padding_default"
            android:contentDescription="@string/up"
            android:layout_marginTop="@dimen/height_24dp"
            android:layout_alignParentStart="true"
            android:visibility="invisible"/>

        <FrameLayout
            android:id="@+id/reveal_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:focusable="true"
            android:visibility="invisible">

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:indeterminate="true"
                android:layout_gravity="center"
                style="?android:attr/progressBarStyleLarge"
                android:theme="@style/SeekBarTheme" />

<!--            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/social_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />-->

        </FrameLayout>

    </RelativeLayout>

         