<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@drawable/bg_action_bar"
    android:paddingTop="@dimen/padding_including_status_bar"
    android:paddingBottom="4dp">

    <ImageView
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/ic_previous_white"
        android:paddingStart="@dimen/padding_default"
        android:paddingEnd="@dimen/padding_default"
        android:contentDescription="@string/up"
        android:foreground="@drawable/ripple_dark"
        android:layout_alignTop="@+id/headerTextView"
        android:layout_alignParentStart="true" />

    <com.cncoding.teazer.customViews.SignPainterTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal|bottom"
        android:textSize="@dimen/text_size_h3"
        android:textColor="@android:color/white"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:text="@string/app_name"
        android:id="@+id/headerTextView" />

</RelativeLayout>