<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowAnimationStyle">@style/BaseActivityTransition</item>
    </style>

    <style name="BottomTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:textColor">@color/colorSecondary_text</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:textAppearanceLargePopupMenu">@style/myPopupMenuTextAppearanceLarge
        </item>
        <item name="android:textAppearanceSmallPopupMenu">@style/myPopupMenuTextAppearanceSmall
        </item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Overlay">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <!--<item name="android:windowTranslucentStatus">false</item>-->
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <!--<item name="android:textColor">#FFFFFF</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:textColor">@color/colorSecondary_text</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="BaseActivityTheme" parent="AppTheme.NoActionBar">
        <!--<item name="colorPrimaryDark">@android:color/white</item>-->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
        <!--<item name="android:navigationBarColor">@color/colorPrimary</item>-->
    </style>

    <style name="BaseActivityTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="myCustomAppBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="height">@dimen/action_bar_height</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme.Overlay">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.RoundedTextView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_outline_rounded</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:foreground">@drawable/ripple</item>-->
    </style>

    <!--<style name="AppTheme.LoginFragment" parent="AppTheme">-->
    <!--<item name="android:windowBackground">@drawable/bg_login</item>-->
    <!--</style>-->

    <style name="AppTheme.RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:background">@drawable/bg_button_white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.FirstNameEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:background">@drawable/bg_button_left_curved</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.LastNameEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:background">@drawable/bg_button_right_curved</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.CountryCodeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_thin</item>
        <item name="android:paddingBottom">@dimen/padding_thin</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <!--<item name="android:layout_marginBottom">@dimen/padding_default</item>-->
        <item name="android:background">@drawable/bg_button_left_curved</item>
    </style>

    <style name="AppTheme.OtpEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/otp_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_otp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">@dimen/otp_edit_text_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/otp_edit_text_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/otp_edit_text_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/otp_edit_text_vertical_margin</item>
        <item name="android:backgroundTint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.RoundedFacebookButtonWelcomePage" parent="AppTheme.BaseLoginButton">
        <item name="android:background">@drawable/bg_button_facebook</item>
        <item name="android:text">@string/continue_with_facebook</item>
    </style>

    <style name="AppTheme.RoundedGoogleButtonWelcomePage" parent="AppTheme.BaseLoginButton">
        <item name="android:background">@drawable/bg_button_google</item>
        <item name="android:text">@string/continue_with_google</item>
    </style>

    <style name="AppTheme.BaseLoginButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">@drawable/ripple_light_rounded_2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginStart">@dimen/padding_default</item>
        <item name="android:layout_marginEnd">@dimen/padding_default</item>
    </style>

    <style name="AppTheme.RoundedMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_primary</item>
        <item name="android:foreground">@drawable/ripple_light_rounded_2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
    </style>

    <style name="AppTheme.Chip" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@drawable/bg_chip</item>
        <item name="android:foreground">@drawable/ripple_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
    </style>

    <style name="AppTheme.ReactButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:paddingTop">@dimen/padding_half</item>-->
        <!--<item name="android:paddingBottom">@dimen/padding_half</item>-->
        <!--<item name="android:paddingStart">@dimen/padding_half</item>-->
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:layout_margin">@dimen/padding_half</item>
        <item name="android:background">@drawable/bg_button_react</item>
        <item name="android:foreground">@drawable/ripple_dark</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
    </style>

    <style name="AppTheme.TransparentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/ripple_dark_no_rounded</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:layout_marginTop">@dimen/padding_thin</item>
        <item name="android:paddingTop">@dimen/padding_thin</item>
        <item name="android:paddingBottom">@dimen/padding_thin</item>
        <!--<item name="android:paddingStart">@dimen/padding_double</item>-->
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.RoundedTextViewWithBoundary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_button_light_outlined</item>
        <item name="android:foreground">@drawable/ripple_dark</item>
        <item name="android:textColor">@color/colorSecondary_text</item>
    </style>

    <style name="AppTheme.RoundedButtonWithBoundary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_outline_rounded_primary</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.RoundedButtonWithBoundaryFilled" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_button_light_outlined</item>
        <item name="android:foreground">@drawable/ripple_dark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/padding_default</item>
        <item name="android:layout_marginEnd">@dimen/padding_default</item>
    </style>

    <style name="AppTheme.CancelUploadButtonsTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/ripple_light_rounded_2dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/padding_half</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_half</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar">
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar">
        <item name="colorAccent">@color/colorReactBtn</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">#ffffff</item>
        <item name="android:textColor">@color/colorSecondary_text</item>
        <item name="android:textSize">16sp</item>
        <!--<item name="android:itemTextAppearance">@android:style/Widget.Holo.Light.TextView</item>-->
    </style>

    <style name="myPopupMenuTextAppearanceSmall" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Small">
        <!--<item name="android:textColorPrimary">@color/colorSecondary_text</item>-->
        <item name="android:textColor">@color/colorSecondary_text</item>
        <!--<item name="android:textSize">16sp</item>-->
    </style>

    <style name="myPopupMenuTextAppearanceLarge" parent="TextAppearance.AppCompat.Light.Widget.PopupMenu.Large">
        <!--<item name="android:textColorPrimary">@color/colorSecondary_text</item>-->
        <item name="android:textColor">@color/colorSecondary_text</item>
        <!--<item name="android:textSize">25sp</item>-->
    </style>

    <style name="CustomProfileFAB" parent="Widget.Design.FloatingActionButton">
        <item name="colorAccent">@android:color/transparent</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_previous</item>
    </style>

