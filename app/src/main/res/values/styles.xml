<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="android:textColor">#000000</item>
        <!--<item name="android:windowLightStatusBar">true</item>-->
        <!--<item name="android:windowDrawsSystemBarBackgrounds">true</item>-->
        <item name="windowNoTitle">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.Overlay">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
        <item name="android:orientation">vertical</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="myCustomAppBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>
        <item name="actionBarStyle">@style/AppTheme.ActionBar</item>
    </style>

    <style name="AppTheme.ActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
        <item name="android:height">@dimen/action_bar_height</item>
        <item name="height">@dimen/action_bar_height</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="SplashScreenTheme" parent="AppTheme.FullScreen">
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="AppTheme.RoundedTextView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_rounded_outline</item>
        <item name="android:gravity">center</item>
        <!--<item name="android:foreground">@drawable/ripple</item>-->
    </style>

    <!--<style name="AppTheme.LoginFragment" parent="AppTheme">-->
    <!--<item name="android:windowBackground">@drawable/bg_login</item>-->
    <!--</style>-->

    <style name="AppTheme.RoundedEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:background">@drawable/bg_rounded_button_accent_light</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.FirstNameEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:background">@drawable/bg_rounded_button_white_first_name</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.LastNameEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:layout_marginBottom">@dimen/padding_default</item>
        <item name="android:background">@drawable/bg_rounded_button_white_last_name</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.CountryCodeEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:paddingTop">@dimen/padding_thin</item>
        <item name="android:paddingEnd">@dimen/padding_half</item>
        <item name="android:paddingBottom">@dimen/padding_thin</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <!--<item name="android:layout_marginBottom">@dimen/padding_default</item>-->
        <item name="android:background">@drawable/bg_rounded_button_white_first_name</item>
    </style>

    <style name="AppTheme.OtpEditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">@dimen/otp_edit_text_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_otp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginStart">@dimen/otp_edit_text_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/otp_edit_text_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/otp_edit_text_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/otp_edit_text_vertical_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:drawableBottom">@drawable/bg_otp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.RoundedFacebookButtonWelcomePage" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_rounded_button_facebook</item>
        <item name="android:foreground">@drawable/ripple_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
    </style>

    <style name="AppTheme.RoundedGoogleButtonWelcomePage" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_rounded_button_google</item>
        <item name="android:foreground">@drawable/ripple_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
    </style>

    <!--    <style name="AppTheme.RoundedMaterialButtonWelcomePage" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_rounded_button_accent_light</item>
        <item name="android:foreground">@drawable/ripple_dark</item>
        <item name="android:textColor">@color/colorSecondary_text</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
    </style>-->

    <style name="AppTheme.RoundedMaterialButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_rounded_button_accent_dark</item>
        <item name="android:foreground">@drawable/ripple_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
    </style>

    <style name="AppTheme.ReactButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/padding_half</item>
        <item name="android:paddingBottom">@dimen/padding_half</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:background">@drawable/bg_rounded_button_accent_dark</item>
        <item name="android:foreground">@drawable/ripple_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
    </style>

    <style name="AppTheme.TransparentButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/ripple_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:paddingTop">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_default</item>
        <item name="android:paddingStart">@dimen/padding_double</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.RoundedTextViewWithBoundary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/bg_rounded_button_light</item>
        <item name="android:foreground">@drawable/ripple_dark</item>
        <item name="android:textColor">@color/colorSecondary_text</item>
    </style>

    <style name="AppTheme.RoundedButtonWithBoundary" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rounded_button_light</item>
        <item name="android:foreground">@drawable/ripple_dark</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:padding">@dimen/padding_default</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginStart">@dimen/padding_default</item>
        <item name="android:layout_marginEnd">@dimen/padding_default</item>
    </style>

    <style name="AppTheme.CancelUploadButtonsTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/ripple_light</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_content_big</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/padding_half</item>
        <item name="android:paddingStart">@dimen/padding_default</item>
        <item name="android:paddingEnd">@dimen/padding_default</item>
        <item name="android:paddingBottom">@dimen/padding_half</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SeekBarTheme" parent="Widget.AppCompat.SeekBar" >
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="ProgressBarTheme" parent="Widget.AppCompat.ProgressBar" >
        <item name="colorAccent">@android:color/white</item>
    </style>

    <style name="PopupMenu" parent="android:Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/popup_drawable</item>
    </style>

