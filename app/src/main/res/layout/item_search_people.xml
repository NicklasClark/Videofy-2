<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/root_layout"
        android:animateLayoutChanges="true"
        android:foreground="@drawable/ripple_semi_dark_no_rounded"
        android:orientation="horizontal">

        <com.cncoding.teazer.customViews.CircularAppCompatImageView
            android:id="@+id/dp"
            android:layout_width="@dimen/padding_double"
            android:layout_height="@dimen/padding_double"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:layout_margin="14dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_weight="1">

            <com.cncoding.teazer.customViews.ProximaNovaSemiBoldTextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="@dimen/text_size_14sp"
                android:textAppearance="?attr/textAppearanceListItem" />

            <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="13sp" />

        </LinearLayout>

        <com.cncoding.teazer.customViews.ProximaNovaSemiBoldTextView
            android:id="@+id/action"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_margin="14dp"
            android:minWidth="90dp"
            android:foreground="@drawable/ripple_dark_rounded_2dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:visibility="visible"
            android:paddingStart="8dp"
            android:paddingEnd="10dp"
            android:contentDescription="@string/post_thumbnail" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"/>

</LinearLayout>