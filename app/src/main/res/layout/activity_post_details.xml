<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cncoding.teazer.home.post.PostDetailsActivity">

    <android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.cncoding.teazer.home.post.PostDetailsActivity"
        android:id="@+id/root_layout"
        android:background="@color/material_grey100"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/video_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true">

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:background="@android:color/black">

                <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                    android:id="@+id/video_view"
                    app:use_controller="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:resize_mode="fixed_width"
                    android:visibility="visible"/>

            </RelativeLayout>

            <ImageView
                android:id="@+id/placeholder"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignTop="@+id/relative_layout"
                android:layout_alignBottom="@+id/relative_layout"
                android:contentDescription="@string/video_preview_thumbnail" />

            <FrameLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/relative_layout"
                android:layout_alignBottom="@+id/relative_layout"
                android:background="@android:color/transparent"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/layout_top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_vignette_top"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingBottom="@dimen/padding_default"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/top_layout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_marginStart="@dimen/action_bar_height"
                        android:layout_weight="1">

                        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                            android:id="@+id/media_controller_caption"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/padding_half"
                            android:paddingBottom="@dimen/padding_half"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/text_size_content_big" />

                        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                            android:id="@+id/media_controller_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:ellipsize="end"
                            app:drawableStartCompat="@drawable/ic_place_black_24dp"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"/>

                    </LinearLayout>

                    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                        android:id="@+id/media_controller_eta"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end|center_vertical"
                        app:drawableStartCompat="@drawable/ic_volume"
                        android:paddingTop="@dimen/padding_half"
                        android:paddingBottom="@dimen/padding_half"
                        android:layout_marginEnd="14dp"
                        android:textColor="@android:color/white"
                        android:layout_weight="0.28"
                        android:textSize="@dimen/text_size_14sp"/>

                </LinearLayout>

                <android.support.v7.widget.AppCompatImageButton
                    android:id="@+id/media_controller_play_pause"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_play_big"
                    android:background="@android:color/transparent" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:indeterminate="true"
                    android:layout_gravity="center"
                    style="?android:attr/progressBarStyleLarge"
                    android:theme="@style/WhiteProgressBarTheme" />

                <RelativeLayout
                    android:id="@+id/layout_bottom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:background="@drawable/bg_vignette_bottom"
                    android:paddingTop="@dimen/padding_default"
                    android:paddingBottom="@dimen/padding_half">

                    <com.cncoding.teazer.customViews.CircularAppCompatImageView
                        android:id="@+id/media_controller_dp"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:scaleType="centerCrop"
                        android:layout_alignParentStart="true"
                        android:foreground="@drawable/bg_circle_white_outline"
                        android:layout_marginStart="14dp"
                        android:layout_marginEnd="13dp"
                        android:layout_alignBottom="@+id/media_controller_likes"/>

                    <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                        android:id="@+id/media_controller_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_content"
                        android:textColor="@android:color/white"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_toStartOf="@+id/media_controller_reaction_3"
                        android:layout_toEndOf="@+id/media_controller_dp"/>

                    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                        android:id="@+id/media_controller_likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_12sp"
                        android:textColor="@android:color/white"
                        app:drawableStartCompat="@drawable/ic_like_outline_small"
                        android:gravity="end|center_vertical"
                        android:layout_marginTop="@dimen/padding_thin"
                        android:layout_below="@+id/media_controller_name"
                        android:layout_toEndOf="@+id/media_controller_dp" />

                    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                        android:id="@+id/media_controller_views"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_12sp"
                        android:textColor="@android:color/white"
                        app:drawableStartCompat="@drawable/ic_view_outline"
                        android:gravity="center_vertical"
                        android:paddingStart="@dimen/padding_half"
                        android:paddingEnd="0dp"
                        android:layout_marginTop="@dimen/padding_thin"
                        android:layout_below="@+id/media_controller_name"
                        android:layout_toStartOf="@id/media_controller_reaction_3"
                        android:layout_toEndOf="@+id/media_controller_likes"
                        android:layout_alignBottom="@+id/media_controller_likes" />

                    <Space
                        android:id="@+id/spacer"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_centerHorizontal="true"/>

                    <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                        android:id="@+id/media_controller_categories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/text_size_12sp"
                        android:layout_below="@+id/media_controller_dp"
                        android:singleLine="true"
                        android:ellipsize="marquee"
                        android:requiresFadingEdge="horizontal"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:scrollHorizontally="true"
                        tools:ignore="Deprecated"
                        android:paddingTop="@dimen/padding_half"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"/>

                    <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                        android:id="@+id/media_controller_reaction_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_12sp"
                        android:textColor="@android:color/white"
                        android:paddingTop="@dimen/padding_half"
                        android:paddingBottom="@dimen/padding_half"
                        android:paddingStart="@dimen/padding_10dp"
                        android:paddingEnd="14dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"/>

                    <com.cncoding.teazer.customViews.CircularAppCompatImageView
                        android:id="@+id/media_controller_reaction_1"
                        android:layout_width="@dimen/height_24dp"
                        android:layout_height="@dimen/height_24dp"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/bg_circle_white_outline"
                        android:layout_centerVertical="true"
                        android:layout_toStartOf="@+id/media_controller_reaction_count"
                        android:visibility="gone"/>

                    <com.cncoding.teazer.customViews.CircularAppCompatImageView
                        android:id="@+id/media_controller_reaction_2"
                        android:layout_width="@dimen/height_24dp"
                        android:layout_height="@dimen/height_24dp"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/bg_circle_white_outline"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_reaction_bubbles"
                        android:layout_toStartOf="@+id/media_controller_reaction_1"
                        android:visibility="gone"/>

                    <com.cncoding.teazer.customViews.CircularAppCompatImageView
                        android:id="@+id/media_controller_reaction_3"
                        android:layout_width="@dimen/height_24dp"
                        android:layout_height="@dimen/height_24dp"
                        android:scaleType="centerCrop"
                        android:foreground="@drawable/bg_circle_white_outline"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/margin_reaction_bubbles"
                        android:layout_toStartOf="@+id/media_controller_reaction_2"
                        android:visibility="gone"/>

                </RelativeLayout>

            </FrameLayout>

            <ProgressBar
                android:id="@+id/loading"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="-12dp"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:theme="@style/ProgressBarTheme" />

            <RelativeLayout
                android:id="@+id/post_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:animateLayoutChanges="true"
                android:layout_below="@+id/controls">


                <LinearLayout
                    android:id="@+id/main_actions"
                    android:layout_width="match_parent"
                    android:layout_height="76dp"
                    android:gravity="center_vertical|fill_horizontal"
                    android:orientation="horizontal"
                    android:layout_alignParentTop="true">


                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:minWidth="115dp"
                        android:layout_weight="10">


                        <com.cncoding.teazer.customViews.ProximaNovaSemiboldButton
                            android:id="@+id/react_btn"
                            style="@style/AppTheme.ReactButton"
                            android:text="@string/react"
                            app:drawableStartCompat="@drawable/ic_react"/>

                    </FrameLayout>

                    <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
                        android:id="@+id/like"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        app:drawableTopCompat="@drawable/ic_like_outline_dark"
                        android:padding="@dimen/padding_thin"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary_text"
                        android:text="@string/like"
                        android:layout_marginStart="@dimen/padding_thin"
                        tools:ignore="RelativeOverlap" />

                    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                        android:id="@+id/share"
                        android:layout_width="52dp"
                        android:layout_height="wrap_content"
                        app:drawableTopCompat="@drawable/ic_share"
                        android:padding="@dimen/padding_thin"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary_text"
                        android:text="@string/share"/>

                    <RelativeLayout
                        android:id="@+id/tags_container"
                        android:layout_width="60dp"
                        android:layout_height="76dp"
                        android:layout_weight="0.1"
                        android:paddingStart="@dimen/padding_thin"
                        android:paddingEnd="@dimen/padding_thin">

                        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                            android:id="@+id/tags"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:drawableTopCompat="@drawable/ic_person_default"
                            android:gravity="center"
                            android:textSize="13sp"
                            android:textColor="@color/colorPrimary_text"
                            android:text="@string/tagged"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/padding_thin"/>

                        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                            android:id="@+id/tags_badge"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="@dimen/text_size_10sp"
                            android:background="@drawable/bg_circle_primary"
                            android:layout_marginTop="6dp"
                            android:layout_marginEnd="@dimen/padding_default"
                            android:layout_alignEnd="@+id/tags"/>

                    </RelativeLayout>

                    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                        android:id="@+id/menu"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        app:drawableTopCompat="@drawable/ic_menu"
                        android:foreground="@drawable/ripple_dark_no_rounded"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/colorPrimary_text"
                        android:text="@string/more"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="0.1"
                        android:padding="@dimen/padding_thin"/>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/horizontal_list_view_parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:layout_below="@+id/main_actions"
                    android:visibility="gone">

                    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                        android:id="@+id/no_tagged_users"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/padding_default"
                        android:gravity="center"
                        android:text="@string/no_users_tagged_yet"
                        android:textSize="@dimen/text_size_content_big"
                        android:textColor="@color/colorSecondary_text"
                        android:visibility="gone"/>

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/tagged_user_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingStart="14dp"
                        android:paddingEnd="14dp"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/separator2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentTop="true"
                        android:background="@color/colorDivider"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_marginBottom="@dimen/padding_half"
                android:background="@color/colorDivider"
                android:layout_below="@+id/post_actions"/>

            <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                android:id="@+id/reactions_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/reactions"
                android:textSize="@dimen/text_size_h4"
                android:textColor="@color/colorSecondary_text"
                android:gravity="start"
                android:paddingTop="@dimen/padding_half"
                android:paddingEnd="@dimen/padding_half"
                android:paddingBottom="@dimen/padding_half"
                android:paddingStart="14dp"
                android:layout_below="@+id/separator"/>

            <LinearLayout
                android:id="@+id/post_load_error_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/reactions_header"
                android:paddingTop="@dimen/padding_default"
                android:paddingBottom="@dimen/padding_double"
                android:foreground="@drawable/ripple_dark_no_rounded"
                android:layout_centerInParent="true"
                android:visibility="gone">

                <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                    android:id="@+id/post_load_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:drawableTopCompat="@drawable/ic_no_data_placeholder"
                    android:textSize="@dimen/text_size_14sp"/>

                <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                    android:id="@+id/post_load_error_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_12sp"/>

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:name="com.cncoding.teazer.home.HomeScreenPostListFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:clipToPadding="false"
                android:layout_below="@+id/reactions_header"
                app:layoutManager="StaggeredGridLayoutManager"
                app:spanCount="2"
                tools:listitem="@layout/item_reaction_post"/>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/btnClose"
        android:layout_width="@dimen/action_bar_height"
        android:layout_height="@dimen/action_bar_height"
        android:scaleType="center"
        android:layout_marginTop="@dimen/padding_half"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_arrow_back_off_white" />

</RelativeLayout>