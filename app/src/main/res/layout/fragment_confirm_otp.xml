<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/padding_default"
    android:paddingEnd="@dimen/padding_default"
    android:gravity="center_horizontal"
    tools:context="com.cncoding.teazer.authentication.ConfirmOtpFragment">

    <!--<include layout="@layout/custom_action_bar" />-->

    <com.cncoding.teazer.customViews.SignPainterTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:padding="@dimen/padding_default"
        android:textSize="@dimen/text_size_h2"
        android:layout_marginTop="@dimen/padding_big"/>

    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
        android:id="@+id/otp_sent_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/padding_default"
        android:layout_marginTop="@dimen/padding_double"
        android:layout_marginBottom="@dimen/padding_half"
        android:textSize="@dimen/text_size_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingStart="@dimen/otp_edit_text_horizontal_margin"
        android:paddingEnd="@dimen/otp_edit_text_horizontal_margin"
        android:layout_marginBottom="@dimen/otp_edit_text_horizontal_margin">

        <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
            android:id="@+id/otp_1"
            style="@style/AppTheme.OtpEditText" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
            android:id="@+id/otp_2"
            style="@style/AppTheme.OtpEditText" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
            android:id="@+id/otp_3"
            style="@style/AppTheme.OtpEditText" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
            android:id="@+id/otp_4"
            style="@style/AppTheme.OtpEditText" />

    </LinearLayout>

    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
        android:id="@+id/otp_verified_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorIcons"
        android:layout_marginTop="@dimen/padding_default"
        android:layout_marginBottom="@dimen/padding_double"/>

    <com.cncoding.teazer.customViews.ProximaNovaSemiboldButton
        android:id="@+id/otp_resend_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_content_big"
        android:text="@string/resend_otp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/ripple_dark"
        android:padding="@dimen/padding_default"
        android:textColor="@color/colorIcons"
        android:enabled="false"/>

</LinearLayout>