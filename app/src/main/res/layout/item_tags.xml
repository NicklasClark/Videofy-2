<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tags_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/ripple_dark_no_rounded"
    android:paddingTop="@dimen/padding_half"
    android:paddingStart="@dimen/padding_default"
    android:paddingEnd="0dp"
    android:paddingBottom="@dimen/padding_half">

    <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
        android:id="@+id/chip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        android:textColor="@color/colorSecondary_text"
        android:checkMark="?android:attr/listChoiceIndicatorMultiple"
        android:textSize="@dimen/text_size_content_big"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/list_item_checked_thumbnail_image"/>

    <com.cncoding.teazer.customViews.CircularImageView
        android:id="@+id/list_item_checked_thumbnail_image"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>