<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <VideoView

        android:id="@+id/flContainer"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        android:layout_height="match_parent">
    </VideoView>

<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    app:cardElevation="2dp"
    android:layout_height="280dp">
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView
            android:id="@+id/demoimage"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:layout_height="280dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp">
        <ImageView

            android:layout_width="match_parent"
            android:background="@drawable/bg_vignette"
            android:layout_height="280dp" />


    </RelativeLayout>


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/descriptionlayout"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
                android:id="@+id/videodetails"
                android:layout_width="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/video_details"
                android:padding="5dp"
                android:textSize="18sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                />
            <com.cncoding.teazer.customViews.CircularAppCompatImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_contextmenu"
                android:foreground="@drawable/ripple_dark_no_rounded"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="16dp"
                android:padding="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="@dimen/padding_default"




                />
            <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
                android:id="@+id/duration"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="48 secs"
                android:layout_marginTop="5dp"
                android:textSize="12sp"
                android:textColor="@color/cardview_light_background"
                android:layout_toStartOf="@+id/menu"/>

        </RelativeLayout>
        <com.cncoding.teazer.customViews.CircularAppCompatImageView
            android:id="@+id/locationimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_place_black_24dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/descriptionlayout"
            />
        <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/cardview_light_background"
            android:layout_height="wrap_content"
            android:layout_below="@+id/descriptionlayout"
            android:layout_toEndOf="@+id/locationimage"/>
    </RelativeLayout>


        <ImageView
            android:id="@+id/playvideo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:src="@drawable/playimages"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true">

            <com.cncoding.teazer.customViews.CircularAppCompatImageView
                android:id="@+id/likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_like_outline_small"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="5dp"
                />
            <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
                android:layout_width="wrap_content"
                android:id="@+id/txtlikes"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/likes"/>

            <com.cncoding.teazer.customViews.CircularAppCompatImageView
                android:id="@+id/view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_view_outline"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_toEndOf="@+id/txtlikes"
                />
            <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
                android:layout_width="wrap_content"
                android:id="@+id/txtview"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textSize="12dp"
                android:textColor="@color/cardview_light_background"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/view"/>
            <RelativeLayout
                android:id="@+id/reactiontext"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_alignParentEnd="true">

                <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
                    android:id="@+id/reactions"
                    android:layout_width="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/cardview_light_background"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/image1_layout"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/reactiontext"
              >
                <com.cncoding.teazer.customViews.CircularAppCompatImageView
                    android:id="@+id/image1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                   />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/image2_layout"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="10dp"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/image1_layout"
                android:layout_marginStart="@dimen/padding_half"
          >

                <com.cncoding.teazer.customViews.CircularAppCompatImageView
                    android:id="@+id/image2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/image3_layout"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:layout_toStartOf="@+id/image2_layout"
                android:layout_marginStart="@dimen/padding_half"
                >

                <com.cncoding.teazer.customViews.CircularAppCompatImageView
                    android:id="@+id/image3"

                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    />

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>
</android.support.v7.widget.CardView>

</RelativeLayout>

