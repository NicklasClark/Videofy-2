<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="278dp"
    android:layout_height="175dp"
    android:layout_marginEnd="14dp">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/video_thumbnail" />

    <LinearLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:background="@drawable/bg_vignette_top"
        android:minHeight="42dp"
        android:paddingTop="@dimen/padding_10dp"
        android:paddingEnd="14dp"
        android:paddingStart="14dp"
        android:paddingBottom="18dp">

        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="16dp"
            android:layout_weight="1"
            android:maxLines="2"
            android:text="Gopro video"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            android:text="22secs"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_14sp"/>

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/media_controller_play_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_play"
        android:alpha="0.8"
        android:background="@android:color/transparent" />

    <RelativeLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="@drawable/bg_vignette_bottom"
        android:paddingStart="14dp"
        android:paddingEnd="14dp">

        <com.cncoding.teazer.customViews.CircularAppCompatImageView
            android:id="@+id/dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:foreground="@drawable/bg_circle_white_outline"
            android:layout_marginEnd="6dp"/>

        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:layout_toStartOf="@+id/reaction_1"
            android:layout_toEndOf="@+id/dp"
            android:layout_alignTop="@+id/dp" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_like_smaller"
            android:gravity="end|bottom"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toEndOf="@+id/dp"
            android:layout_below="@+id/name" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_view_outline_smaller"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingTop="0.8dp"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@id/reaction_1"
            android:layout_toEndOf="@+id/likes"
            android:layout_below="@+id/name" />

        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
            android:id="@+id/reaction_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_14sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:paddingTop="@dimen/padding_half"
            android:paddingBottom="@dimen/padding_half"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

        <com.cncoding.teazer.customViews.CircularAppCompatImageView
            android:id="@+id/reaction_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:foreground="@drawable/bg_circle_white_outline"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/padding_thin"
            android:layout_toStartOf="@+id/reaction_2"
            android:visibility="gone"/>

        <com.cncoding.teazer.customViews.CircularAppCompatImageView
            android:id="@+id/reaction_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:foreground="@drawable/bg_circle_white_outline"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/reaction_count"
            android:visibility="gone"/>

    </RelativeLayout>

</FrameLayout>