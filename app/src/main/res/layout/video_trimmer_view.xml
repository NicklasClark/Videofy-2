<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/videoOptions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/ic_arrow_back"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/icon_video_sound"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="12dp"
            android:src="@drawable/ic_volume_black" />

        <TextView
            android:id="@+id/finishBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="Next"
            android:textColor="@android:color/black"
            android:textSize="16dp" />

    </FrameLayout>
    <RelativeLayout
        android:layout_below="@+id/videoOptions"
        android:id="@+id/layout_surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="vertical">
        <VideoView
            android:id="@+id/video_loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/icon_video_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="12dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_play_big" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white">


        <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:visibility="visible"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/video_shoot_tip"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="Duration"
            android:textColor="#444444"
            android:textSize="15sp" />

        <com.cncoding.teazer.videoTrim.widget.VideoThumbHorizontalListView
            android:id="@+id/video_thumb_listview"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="16dp"
            android:layout_below="@+id/video_shoot_tip"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="5dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" />

        <SeekBar
            android:id="@+id/handlerTop"
            style="@style/Video_Trim_SeekBar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="6dp"
            android:paddingRight="0dp"
            android:visibility="visible"
            android:max="1000"
            android:layout_alignTop="@+id/video_thumb_listview"
            android:layout_below="@+id/video_shoot_tip"
            android:progressDrawable="@android:color/transparent"
            android:secondaryProgress="0"/>

        <com.cncoding.teazer.videoTrim.widget.RangeSeekBarView
            android:id="@+id/timeLineBar"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/video_shoot_tip" />

    </RelativeLayout>
</RelativeLayout>