<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaSemiBoldTextView
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:id="@+id/alert1"
        android:layout_width="wrap_content"
 android:visibility="gone"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="5dp"
        android:text="Reactions are a new way to communicate!"
        android:textColor="#505050"
        android:textSize="14sp" />
    <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularTextView

        android:id="@+id/alert2"
        android:layout_below="@+id/alert1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Lets start by reacting on post you like."
        android:textColor="#505050"
        android:textSize="14sp" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        android:paddingBottom="?attr/actionBarSize"
        android:id="@+id/recycler_view"/>
    </RelativeLayout>

    <pl.droidsonroids.gif.GifTextView
        android:id="@+id/loader"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_loader" />
</RelativeLayout>