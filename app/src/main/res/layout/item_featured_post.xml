<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card"
    android:visibility="gone"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="8dp"
    android:animateLayoutChanges="true">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/bg_vignette"
        android:contentDescription="@string/post_thumbnail"
        android:layout_centerInParent="true"
        android:layout_marginTop="-10dp"
        android:adjustViewBounds="true" />

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:contentDescription="@string/play_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:layout_alignParentTop="true">

        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
            android:id="@+id/title"
            android:layout_width="159dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="13sp"
            android:layout_toStartOf="@+id/category" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#f48fb1"
            android:textSize="@dimen/text_size_9sp"
            android:paddingTop="@dimen/padding_x_thin"
            android:paddingBottom="@dimen/padding_x_thin"
            android:paddingStart="@dimen/padding_half"
            android:paddingEnd="@dimen/padding_half"
            android:gravity="center"
            android:background="@drawable/bg_outline_rounded"
            android:layout_marginStart="@dimen/padding_half"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:paddingBottom="@dimen/padding_10dp">

        <com.cncoding.teazer.customViews.CircularAppCompatImageView
            android:id="@+id/dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"/>

        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/dp"/>

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:text="254"
            app:drawableStartCompat="@drawable/ic_like_outline_8x8"
            android:gravity="end|bottom"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/dp" />

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_view_outline_smaller"
            android:text=" 254"
            android:gravity="start|bottom"
            android:maxLines="1"
            android:singleLine="true"
            android:layout_marginStart="@dimen/padding_10dp"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/likes"
            android:layout_alignBottom="@+id/likes"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>