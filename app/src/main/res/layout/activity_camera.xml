<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoPanelHeight="50dp"
    sothree:umanoShadowHeight="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".camera.CameraActivity">

        <FrameLayout
            android:id="@+id/camera_texture_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/space_background_color"
            android:adjustViewBounds="true"/>

        <ImageView
            android:id="@+id/camera_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_video_files"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/padding_double"
            android:contentDescription="@string/show_videos_on_device" />

        <FrameLayout
            android:id="@+id/camera_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/camera_record_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_record_outer"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_double"
                android:contentDescription="@string/record_video" />

            <ImageView
                android:id="@+id/camera_record_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_record_inner"
                android:layout_gravity="center"
                android:contentDescription="@string/record_video" />

        </FrameLayout>

        <ImageView
            android:id="@+id/camera_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rotate"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_double"
            android:contentDescription="@string/flip_camera" />

        <ImageView
            android:id="@+id/camera_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_flash_off"
            android:padding="@dimen/padding_double"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="@string/camera_flash"/>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">

            <Space
                android:id="@+id/spacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <com.cncoding.teazer.customViews.FlippedProgressBar
                android:id="@+id/camera_countdown_progress_bar_flipped"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:indeterminate="false"
                android:layout_toStartOf="@+id/spacer"
                android:progressDrawable="@drawable/bg_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"/>

            <ProgressBar
                android:id="@+id/camera_countdown_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:indeterminate="false"
                android:layout_toEndOf="@+id/spacer"
                android:progressDrawable="@drawable/bg_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"/>

        </RelativeLayout>


        <FrameLayout
            android:id="@+id/video_preview_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDisabled"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/padding_default">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/padding_with_navigation_bar_height" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/video_gallery_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:paddingTop="@dimen/padding_half"
            android:clipToPadding="false"
            app:fastScrollEnabled="true"
            app:fastScrollHorizontalTrackDrawable="@drawable/line_drawable"
            app:fastScrollHorizontalThumbDrawable="@drawable/thumb_drawable"
            app:fastScrollVerticalTrackDrawable="@drawable/line_drawable"
            app:fastScrollVerticalThumbDrawable="@drawable/thumb_drawable"
            android:clickable="true"/>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>