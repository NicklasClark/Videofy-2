<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    app:umanoAnchorPoint="0.4"
    sothree:umanoPanelHeight="0dp"
    sothree:umanoShadowHeight="40dp"
    tools:context=".camera.CameraActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <FrameLayout
            android:id="@+id/camera_texture_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_above="@+id/camera_record"/>

        <ImageView
            android:id="@+id/camera_files"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_video_files"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:padding="@dimen/padding_double"
            android:contentDescription="@string/show_videos_on_device" />

        <FrameLayout
            android:id="@+id/camera_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/camera_record_outer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_record_outer"
                android:layout_gravity="center"
                android:layout_margin="@dimen/padding_double"
                android:contentDescription="@string/record_video" />

            <ImageView
                android:id="@+id/camera_record_inner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_record_inner"
                android:layout_gravity="center"
                android:contentDescription="@string/record_video" />

        </FrameLayout>

        <ImageView
            android:id="@+id/camera_flip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rotate"
            android:background="@android:color/transparent"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/padding_default"
            android:contentDescription="@string/flip_camera" />

        <ImageView
            android:id="@+id/camera_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_flash_off"
            android:padding="@dimen/padding_default"
            android:layout_marginEnd="@dimen/padding_half"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/camera_flip"
            android:layout_alignTop="@+id/camera_flip"
            android:layout_alignBottom="@+id/camera_flip"
            android:contentDescription="@string/camera_flash"/>

        <RelativeLayout
            android:id="@+id/progress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible">

            <Space
                android:id="@+id/spacer"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"/>

            <com.cncoding.teazer.customViews.FlippedProgressBar
                android:id="@+id/camera_countdown_progress_bar_flipped"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:indeterminate="false"
                android:layout_toStartOf="@+id/spacer"
                android:progressDrawable="@drawable/bg_progress_bar_linear"
                style="?android:attr/progressBarStyleHorizontal"/>

            <ProgressBar
                android:id="@+id/camera_countdown_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:indeterminate="false"
                android:layout_toEndOf="@+id/spacer"
                android:progressDrawable="@drawable/bg_progress_bar_linear"
                style="?android:attr/progressBarStyleHorizontal"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/video_upload_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorDisabled"
            android:visibility="gone"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@color/colorIcons"
        android:paddingTop="@dimen/padding_default"
        android:paddingEnd="@dimen/padding_default"
        android:paddingStart="@dimen/padding_default">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/sliding_panel_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_up"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/video_gallery_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_gravity="center_horizontal"
            android:numColumns="auto_fit"
            android:paddingTop="@dimen/padding_half"
            android:clipToPadding="false"
            android:clickable="true"/>

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>