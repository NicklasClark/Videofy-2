<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cncoding.teazer.authentication.SignupFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default"
            android:gravity="center_horizontal"
            android:isScrollContainer="true"
            tools:context="com.cncoding.teazer.authentication.SignupFragment">

            <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularTextView
                android:id="@+id/signup_page_header"
                android:text="@string/you_are_almost_there"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/padding_default"
                android:textSize="@dimen/text_size_content_big"
                android:layout_marginTop="@dimen/padding_with_navigation_bar_height"
                android:layout_marginBottom="@dimen/padding_double"
                android:textColor="@color/colorIcons"/>

            <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
                android:id="@+id/signup_name"
                style="@style/AppTheme.RoundedEditText"
                android:hint="@string/first_and_last_name"
                android:maxLength="250"
                android:inputType="text|textPersonName|textCapWords"
                android:imeOptions="actionNext"/>

            <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
                android:id="@+id/signup_email"
                style="@style/AppTheme.RoundedEditText"
                android:hint="@string/your_email"
                android:inputType="textEmailAddress"
                android:imeOptions="actionNext" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.cncoding.teazer.customViews.CustomCountryCodePicker
                    android:id="@+id/signup_country_code"
                    style="@style/AppTheme.CountryCodeEditText"
                    app:ccp_autoDetectCountry="true"
                    app:ccp_defaultLanguage="ENGLISH"
                    app:ccpDialog_allowSearch="true"
                    app:ccp_defaultNameCode="IN"
                    app:ccpDialog_fastScroller_bubbleColor="@color/colorAccent"
                    app:ccpDialog_showFastScroller="true"
                    app:ccpDialog_keyboardAutoPopup="false"
                    app:ccp_countryPreference="IN,US,GB"
                    app:ccpDialog_fastScroller_handleColor="@color/colorAccent"
                    app:ccpDialog_backgroundColor="@color/material_grey100"
                    app:ccpDialog_textColor="@color/colorSecondary_text"
                    app:ccp_contentColor="@color/colorCcp"
                    app:ccp_showNameCode="false"
                    app:ccp_showPhoneCode="true"
                    android:layout_alignBottom="@+id/signup_phone_number"
                    android:layout_alignTop="@+id/signup_phone_number"/>

                <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
                    android:id="@+id/signup_phone_number"
                    style="@style/AppTheme.PhoneNumberEditText"
                    android:hint="@string/phone_number"
                    android:textAlignment="textStart"
                    android:inputType="number|phone"
                    android:imeOptions="actionGo"
                    android:maxLength="13"
                    android:digits="@string/validNumber"
                    android:layout_toEndOf="@+id/signup_country_code"/>

            </RelativeLayout>

            <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaSemiboldButton
                android:id="@+id/signup_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_default"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="@dimen/padding_default"
                android:text="@string/okay_let_s_roll"
                style="@style/AppTheme.RoundedMaterialButton" />

        </LinearLayout>

    </ScrollView>

</android.support.design.widget.CoordinatorLayout>