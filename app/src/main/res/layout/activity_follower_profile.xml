<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.activity.FollowerFollowingProfileActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleGravity="bottom|center_horizontal"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <RelativeLayout

                    android:id="@+id/profile_layout"
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/background_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:transitionName="profile" />


                    <RelativeLayout

                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        android:background="@color/blur"
                        android:orientation="vertical" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="?attr/actionBarSize"
                            android:orientation="horizontal"
                            android:paddingTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10dp"
                                        android:background="@drawable/bg_circle_white_outline">

                                        <com.cncoding.teazer.customViews.CircularAppCompatImageView
                                            android:id="@+id/profile_id"
                                            android:layout_width="84dp"
                                            android:layout_height="84dp"
                                            android:layout_gravity="center_vertical"
                                            android:layout_margin="2dp"
                                            android:fitsSystemWindows="true"

                                            android:scaleType="centerCrop"
                                            android:src="@drawable/arif_image"
                                            app:layout_collapseMode="parallax" />
                                    </RelativeLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RelativeLayout

                                        android:layout_width="match_parent"
                                        android:layout_marginLeft="5dp"
                                        android:layout_height="wrap_content">


                                        <com.cncoding.teazer.customViews.SignPainterTextView
                                            android:id="@+id/username"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:layout_marginBottom="5dp"
                                            android:layout_marginTop="10dp"
                                            android:gravity="center"
                                            android:text="@string/username"
                                            android:textColor="@color/colorIcons"
                                            android:textSize="32sp" />
                                        <LinearLayout
                                            android:id="@+id/bulletslayout"
                                            android:layout_width="match_parent"
                                            android:layout_centerVertical="true"
                                            android:gravity="center_vertical"
                                            android:layout_below="@+id/username"
                                            android:layout_height="wrap_content">

                                        <TextView
                                            android:id="@+id/bullets"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/username"
                                            android:text="\u25CF"
                                            android:textColor="#b1ffffff"
                                            android:textSize="12dp" />

                                        <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView
                                            android:id="@+id/name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/username"
                                            android:layout_marginStart="5dp"
                                            android:layout_toEndOf="@+id/bullets"
                                            android:text="@string/name"
                                            android:textColor="@color/colorIcons"
                                            android:textSize="12sp" />
                                        </LinearLayout>

                                        <com.cncoding.teazer.customViews.ProximaNovaRegularCheckedTextView

                                            android:id="@+id/hobby"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/bulletslayout"
                                            android:layout_marginBottom="10dp"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginRight="20dp"
                                            android:lineSpacingExtra="2dp"
                                            android:text="@string/hobby"
                                            android:textColor="@color/colorIcons"
                                            android:textSize="12sp" />


                                        <Button
                                            android:id="@+id/btnfollow"
                                            android:layout_width="85dp"
                                            android:layout_height="26dp"
                                            android:layout_below="@+id/hobby"
                                            android:layout_marginEnd="10dp"
                                            android:background="@drawable/border_layout"
                                            android:drawableStart="@drawable/ic_check_24dp"
                                            android:paddingTop="5dp"
                                            android:paddingBottom="5dp"
                                            android:paddingRight="3dp"
                                            android:paddingLeft="6dp"
                                            android:drawablePadding="-3dp"
                                            android:textAllCaps="false"
                                            android:textColor="@color/colorIcons"
                                            android:textSize="12sp" />
                                        />

                                    </RelativeLayout>
                                </LinearLayout>


                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
