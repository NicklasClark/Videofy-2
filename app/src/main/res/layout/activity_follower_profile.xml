                </RelativeLayout>

                <android.support.v7.widget.Toolbar

                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#26C6DA"
                    app:layout_collapseMode="pin">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_margin="50dp"
                        android:background="@drawable/bg_circle_white_outline"
                        android:visibility="gone">

                        <com.cncoding.teazer.customViews.CircularAppCompatImageView
                            android:id="@+id/small_profile_icon"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="left"
                            android:layout_margin="1dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/arif_image" />



                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.cncoding.teazer.customViews.ProximaNovaCondensedTextView
                            android:id="@+id/toolbarusername"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/backbutton"
                            android:text="Profile"
                            android:textColor="@color/colorIcons"
                            android:textSize="@dimen/text_size_h5"
                            />

                        <com.cncoding.teazer.customViews.CircularAppCompatImageView
