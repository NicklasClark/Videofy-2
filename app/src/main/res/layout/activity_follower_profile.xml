<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.activity.FollowerFollowingProfileActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:id="@+id/layout"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout

        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:background="@color/material_grey100"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/backgroundprofile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:background="@drawable/material_flat"
                    app:layout_collapseMode="parallax" />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/action_bar_height"

                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:id="@+id/container"
                        android:layout_marginLeft="16dp"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content">
                            <com.cncoding.teazer.customViews.SignPainterTextView
                                android:id="@+id/username_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/name"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:textColor="@color/colorIcons"
                                android:layout_gravity="center"
                                android:textSize="@dimen/text_size_h3"
                                android:gravity="center"/>
                            <TextView
                                android:id="@+id/bullets"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/username_title"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/text_size_content"
                                android:text="\u25CF"/>

                            <TextView
                                android:id="@+id/username"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_toRightOf="@+id/bullets"
                                android:layout_marginLeft="5dp"
                                android:layout_below="@+id/username_title"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/text_size_content"
                                android:text="@string/username" />


                            <TextView

                                android:id="@+id/hobby"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/bullets"
                                android:textSize="@dimen/text_size_content"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorIcons"
                                android:text="@string/hobby" />

                            <TextView

                                android:id="@+id/detail"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_below="@+id/hobby"
                                android:textSize="@dimen/text_size_content"
                                android:textColor="@color/colorIcons"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:text="@string/user_detail" />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/btnshare"
                                android:layout_below="@+id/detail"
                                android:text="Share"
                                android:textAllCaps="false"
                                android:textSize="14dp"
                                android:textStyle="normal"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorIcons"
                                android:background="@drawable/border_layout"
                                android:drawableLeft="@drawable/ic_share"
                                android:layout_marginRight="10dp"
                                android:padding="5dp"
                                />
                            <Button
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:id="@+id/btnfollow"
                                android:layout_below="@+id/detail"
                                android:layout_toRightOf="@+id/btnshare"
                                android:text="Following"
                                android:textStyle="normal"
                                android:padding="5dp"
                                android:textAllCaps="false"
                                android:textSize="14dp"
                                android:background="@drawable/border_layout"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/colorIcons"
                                android:drawableLeft="@drawable/ic_edit"
                                />


                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"

                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/creations"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_toRightOf="@+id/bullets"
                                android:layout_marginLeft="5dp"
                                android:layout_below="@+id/username_title"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/text_size_content2"
                                android:drawableLeft="@drawable/ic_creations"
                                android:drawablePadding="5dp"
                                android:text="@string/creation" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight=".3"

                            android:orientation="horizontal">
                            <View
                                android:layout_height="30dp"
                                android:layout_width="1dp"
                                android:background="@color/colorIcons"
                                android:layout_below="@+id/username_title"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/colorlines"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/following"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_toRightOf="@+id/bullets"
                                android:layout_marginLeft="5dp"
                                android:layout_below="@+id/username_title"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/text_size_content2"
                                android:drawableLeft="@drawable/ic_following"
                                android:drawablePadding="5dp"
                                android:text="@string/following" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight=".3"
                            android:orientation="horizontal">
                            <View
                                android:layout_height="30dp"
                                android:layout_width="1dp"
                                android:layout_marginLeft="10dp"
                                android:background="@color/colorlines"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_height="wrap_content"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/followers"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:layout_toRightOf="@+id/bullets"
                                android:layout_marginLeft="5dp"
                                android:layout_below="@+id/username_title"
                                android:textColor="@color/colorIcons"
                                android:textSize="@dimen/text_size_content2"
                                android:drawableLeft="@drawable/ic_followers"
                                android:drawablePadding="5dp"
                                android:text="@string/followers" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin">

                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">


                    <TextView
                        android:id="@+id/toolbarusername"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/backbutton"
                        android:layout_marginLeft="5dp"
                        android:visibility="invisible"
                        android:textColor="@color/colorIcons"
                        android:textSize="@dimen/text_size_h5"
                        android:text="@string/username" />

                    <com.cncoding.teazer.customViews.CircularAppCompatImageView
                        android:id="@+id/menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/ic_contextmenu"
                        android:foreground="@drawable/ripple_dark_no_rounded"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="16dp"
                        android:padding="5dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginEnd="@dimen/padding_default"
                        />
                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
        <RelativeLayout

            android:id="@+id/layoutDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <android.support.v7.widget.RecyclerView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recycler_view"
        android:layout_marginBottom="10dp"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>
</android.support.design.widget.CoordinatorLayout>