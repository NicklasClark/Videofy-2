<ScrollView
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minWidth="400dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default"
            >

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/btnClose"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:scaleType="center"
                android:layout_marginTop="@dimen/padding_half"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="right"
                android:src="@drawable/ic_clear_black_24dp" />



            <com.cncoding.teazer.customViews.proximanovaviews.SignPainterTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:padding="@dimen/padding_default"
                android:visibility="gone"
                android:textColor="#ffffff"
                android:textSize="@dimen/text_size_h2"
                android:layout_marginTop="@dimen/padding_big"
                tools:ignore="PrivateResource" />

            <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularTextView
                android:id="@+id/otp_sent_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/colorPrimary_text"
                android:padding="@dimen/padding_default"
                android:layout_marginTop="@dimen/padding_double"
                android:layout_marginBottom="@dimen/padding_half"
                android:textSize="@dimen/text_size_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="@dimen/otp_edit_text_horizontal_margin"
                android:paddingEnd="@dimen/otp_edit_text_horizontal_margin"
                android:layout_marginBottom="@dimen/otp_edit_text_horizontal_margin">

                <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
                    android:id="@+id/otp_1"
                    style="@style/AppTheme.OtpEditText2"/>

                <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
                    android:id="@+id/otp_2"
                    style="@style/AppTheme.OtpEditText2" />

                <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
                    android:id="@+id/otp_3"
                    style="@style/AppTheme.OtpEditText2" />

                <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
                    android:id="@+id/otp_4"
                    style="@style/AppTheme.OtpEditText2" />

            </LinearLayout>

            <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularTextView
                android:id="@+id/otp_verified_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary_text"
                android:layout_marginTop="@dimen/padding_default"
                android:layout_marginBottom="@dimen/padding_double"/>

            <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaSemiboldButton
                android:id="@+id/otp_resend_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_content_big"
                android:textAllCaps="false"
                android:text="@string/resend_otp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/ripple_dark"
                android:paddingBottom="60dp"
                android:textColor="@color/colorPrimary_text"
                android:enabled="false"/>

        </LinearLayout>

    </ScrollView>
