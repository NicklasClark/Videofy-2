<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
        android:id="@+id/interests_header"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingTop="6dp"
        android:paddingStart="40dp"
        android:paddingEnd="@dimen/padding_half"
        android:hint="@string/your_video_is_about"
        android:background="@drawable/bg_card_no_margin_grey"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionGo"
        app:drawableStartCompat="@drawable/ic_search_padded_left"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/clear"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_clear_dark"
        android:scaleType="center"
        android:foreground="@drawable/ripple_dark_circle"
        android:layout_alignEnd="@+id/interests_header"
        android:layout_alignBottom="@+id/interests_header"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/padding_thin"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/action_bar_height"
        android:layout_below="@+id/interests_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="14dp"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_content"
                android:text="@string/select_video_categories"
                android:elevation="2dp"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingTop="10dp"
                android:paddingStart="7dp"
                android:paddingEnd="7dp"
                android:paddingBottom="10dp"
                android:clipToPadding="false"
                tools:listItem="@layout/chip"/>

        </LinearLayout>

    </ScrollView>

    <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
        android:id="@+id/save_interests_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center"
        android:text="@string/save"
        android:drawablePadding="-80dp"
        android:textSize="@dimen/text_size_content_big"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:foreground="@drawable/ripple_light_rounded_2dp"/>

</RelativeLayout>