<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
        android:id="@+id/interests_header"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:visibility="gone"/>

    <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
        android:id="@+id/interests_header_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:textSize="@dimen/text_size_content_big"
        android:gravity="center"
        android:background="@drawable/bg_card_no_margin_white"
        android:text="@string/select_your_interests"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
        android:id="@+id/save_interests_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center"
        android:text="@string/save"
        android:paddingStart="14dp"
        android:paddingEnd="14dp"
        android:textSize="@dimen/text_size_content_big"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@color/colorAccent"
        android:enabled="false"
        android:foreground="@drawable/ripple_light_rounded_2dp"/>
</LinearLayout>