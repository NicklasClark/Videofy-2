<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:fragment="com.cncoding.teazer.home.discover.search.DiscoverSearchFragment">

    <RelativeLayout
        android:id="@+id/discover_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:animateLayoutChanges="true">

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/toolbar_plain_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/action_bar_height"
            android:layout_marginStart="@dimen/action_bar_height"
            android:gravity="start|center_vertical"
            android:textSize="20sp"
            android:text="@string/discover"
            android:padding="@dimen/padding_thin"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorPrimary_text"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularAutoCompleteTextView
            android:id="@+id/discover_search"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="@string/search_for_videos_or_people"
            android:textSize="@dimen/text_size_14sp"
            android:layout_marginTop="@dimen/padding_thin"
            android:layout_marginBottom="@dimen/padding_thin"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:paddingStart="0dp"
            android:paddingEnd="18dp"
            android:maxLength="40"
            android:textColorHint="@color/colorSecondary_text"
            android:textColor="#333333"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:layout_below="@+id/toolbar_plain_title"
            app:drawableStartCompat="@drawable/ic_search_padded"
            android:background="@drawable/bg_card_curved_corners"/>

        <include layout="@layout/progress_bar_horizontal"
            android:layout_below="@+id/discover_search"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BottomTabLayout.NotificationTab"
        android:layout_marginTop="-5dp"
        android:background="@color/colorPrimary"
        app:tabTextColor="@color/colorSecondary_text"
        app:tabSelectedTextColor="@color/colorAccent"
        app:tabIndicatorColor="@color/colorAccent"
        app:tabIndicatorHeight="3dp"
        android:elevation="2dp">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videos" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/people" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>