<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cncoding.teazer.home.discover.search.DiscoverSearchFragment">

    <RelativeLayout
        android:id="@+id/discover_toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/padding_thin"
        android:background="@color/colorPrimary"
        android:animateLayoutChanges="true"
        android:elevation="4dp">

        <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
            android:id="@+id/discover_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search_videos_or_places"
            android:textSize="@dimen/text_size_14sp"
            android:layout_margin="@dimen/padding_thin"
            android:textColorHint="@color/colorSecondary_text"
            android:textColor="#333333"
            app:drawableStartCompat="@drawable/ic_search_padded"
            android:background="@drawable/bg_card_curved_corners"/>

        <include layout="@layout/progress_bar_horizontal"
            android:layout_below="@+id/discover_search"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:visibility="gone"/>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/BottomTabLayout.NotificationTab"
        android:layout_marginTop="-5dp"
        android:background="@color/colorPrimary"
        app:tabTextColor="@color/colorSecondary_text"
        app:tabSelectedTextColor="@color/colorPrimaryOld"
        app:tabIndicatorColor="@color/colorPrimaryOld"
        app:tabIndicatorHeight="3dp"
        android:elevation="4dp">

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/videos" />

        <android.support.design.widget.TabItem
            android:id="@+id/tabItem2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/people" />

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/padding_half"
        android:paddingBottom="@dimen/padding_half"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>