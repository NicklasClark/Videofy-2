<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cncoding.teazer.home.search.SearchFragment">

    <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
        android:id="@+id/user_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_default"
        android:hint="@string/search"
        app:drawableStartCompat="@drawable/ic_search"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/list"
        android:background="@color/material_grey100"
        android:name="com.cncoding.teazer.home.search.SearchFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="?android:attr/actionBarSize"
        android:clipToPadding="false"
        tools:listitem="@layout/item_user_list" />

</LinearLayout>