<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        tools:context="com.cncoding.teazer.home.discover.DiscoverFragment">

        <LinearLayout
            android:id="@+id/discover_toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/padding_thin"
            android:background="@color/colorPrimary"
            android:animateLayoutChanges="true"
            android:elevation="4dp">

            <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                android:id="@+id/discover_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/search_videos_or_places"
                android:layout_margin="@dimen/padding_thin"
                android:gravity="center_vertical"
                android:textColorHint="@color/colorSecondary_text"
                android:textSize="@dimen/text_size_14sp"
                android:textColor="#333333"
                app:drawableStartCompat="@drawable/ic_search_padded"
                android:background="@drawable/bg_card_curved_corners"/>

            <include layout="@layout/progress_bar_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/discover_posts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/material_grey200"
            android:animateLayoutChanges="true"
            android:layout_below="@+id/discover_toolbar_layout"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_card_no_margin"
                android:animateLayoutChanges="true"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/most_popular_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_default"
                    android:layout_marginStart="@dimen/padding_default"
                    android:orientation="horizontal">

                    <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                        android:id="@+id/most_popular"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_half"
                        android:text="@string/most_popular"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_content_big"/>

                    <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                        android:id="@+id/most_popular_view_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/padding_half"
                        android:paddingBottom="@dimen/padding_half"
                        android:paddingStart="@dimen/padding_default"
                        android:paddingEnd="@dimen/padding_default"
                        android:text="@string/view_all"
                        android:layout_gravity="center_vertical"
                        android:foreground="@drawable/ripple_dark_no_rounded"
                        android:textSize="@dimen/text_size_content"/>

                </LinearLayout>

                <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                    android:id="@+id/no_most_popular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="236dp"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_content_big"
                    android:text="@string/no_posts_available"
                    android:layout_below="@+id/most_popular_layout"
                    android:visibility="gone"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/most_popular_list"
                    android:layout_below="@+id/most_popular_layout"
                    android:minHeight="236dp"
                    style="@style/BottomTabLayout.RecyclerView" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_half"
                android:orientation="horizontal">

                <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_half"
                    android:text="@string/my_interests"
                    android:layout_weight="1"
                    android:textSize="@dimen/text_size_content_big"/>

                <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                    android:id="@+id/my_interests_view_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingBottom="@dimen/padding_half"
                    android:paddingStart="@dimen/padding_default"
                    android:paddingEnd="@dimen/padding_default"
                    android:text="@string/view_all"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/ripple_dark_no_rounded"
                    android:textSize="@dimen/text_size_content"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_no_margin">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/my_interests_list"
                    style="@style/BottomTabLayout.RecyclerView"
                    android:paddingStart="@dimen/padding_half"
                    android:paddingEnd="0dp"/>

                <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                    android:id="@+id/trending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/padding_half"
                    android:layout_marginStart="@dimen/padding_half"
                    android:paddingTop="@dimen/padding_half"
                    android:paddingStart="@dimen/padding_half"
                    android:paddingEnd="@dimen/padding_half"
                    android:text="@string/trending"
                    android:textSize="@dimen/text_size_content_big"
                    android:layout_below="@id/my_interests_list"/>

                <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                    android:id="@+id/no_trending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="60dp"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_content_big"
                    android:text="@string/no_posts_available"
                    android:layout_below="@+id/trending"
                    android:visibility="gone"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/trending_list"
                    android:layout_below="@+id/trending"
                    style="@style/BottomTabLayout.RecyclerView" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/featured_posts_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:layout_below="@+id/discover_posts_container"
            android:visibility="invisible">

            <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_half"
                android:padding="@dimen/padding_half"
                android:text="@string/featured_videos"
                android:textSize="@dimen/text_size_content_big"/>

            <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                android:id="@+id/no_featured_videos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="200dp"
                android:gravity="center"
                android:textSize="@dimen/text_size_content_big"
                android:text="@string/no_posts_available"
                android:visibility="gone"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/featured_videos_list"
                android:background="@drawable/bg_card_no_margin"
                style="@style/BottomTabLayout.RecyclerView"
                android:paddingTop="@dimen/padding_default"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/post_load_error_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="@dimen/padding_including_action_bar"
            android:paddingBottom="@dimen/padding_including_action_bar"
            android:foreground="@drawable/ripple_dark_no_rounded"
            android:layout_below="@+id/featured_posts_container"
            android:visibility="gone">

            <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                android:id="@+id/post_load_error"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textAllCaps="true"
                app:drawableTopCompat="@drawable/ic_no_data_placeholder"
                android:textSize="@dimen/text_size_h5"
                android:text="@string/could_not_load_posts"/>

            <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
                android:id="@+id/tap_to_retry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/text_size_content_big"
                android:text="@string/tap_to_retry"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>