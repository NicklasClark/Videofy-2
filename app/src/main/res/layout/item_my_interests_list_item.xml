<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="14dp"
    android:paddingEnd="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/video_thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/video_thumbnail" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_alignBottom="@+id/video_thumbnail"
        android:layout_alignStart="@+id/video_thumbnail"
        android:layout_alignEnd="@+id/video_thumbnail"
        android:paddingBottom="@dimen/padding_thin"
        android:background="@drawable/bg_vignette_bottom">

        <com.cncoding.teazer.ui.customviews.CircularAppCompatImageView
            android:id="@+id/dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="7dp"
            android:layout_marginEnd="6dp"
            android:layout_marginTop="2dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"
            android:layout_alignParentStart="true"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="14dp"
            android:textColor="@android:color/white"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:paddingStart="0dp"
            android:paddingEnd="7dp"
            android:layout_toEndOf="@+id/dp"
            android:layout_alignParentEnd="true" />

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/text_size_10sp"
            android:drawablePadding="4dp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_like_smaller"
            android:gravity="start|center_vertical"
            android:layout_below="@+id/name"
            android:layout_alignStart="@+id/name" />

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="@dimen/text_size_10sp"
            android:drawablePadding="4dp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_view_outline_smaller"
            android:gravity="start|center_vertical"
            android:layout_marginStart="4dp"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/likes"
            android:layout_alignBottom="@+id/likes"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/padding_thin"
        android:layout_marginBottom="@dimen/padding_thin"
        android:layout_below="@+id/video_thumbnail"
        android:layout_alignStart="@+id/video_thumbnail"
        android:layout_alignEnd="@+id/video_thumbnail"/>

    <com.cncoding.teazer.ui.customviews.CircularAppCompatImageView
        android:id="@+id/reaction_1"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/title"
        android:visibility="gone"/>

    <com.cncoding.teazer.ui.customviews.CircularAppCompatImageView
        android:id="@+id/reaction_2"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:scaleType="centerCrop"
        android:layout_marginStart="6dp"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/reaction_1"
        android:visibility="gone"/>

    <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
        android:id="@+id/reaction_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14sp"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginTop="1dp"
        android:layout_marginStart="@dimen/padding_half"
        android:layout_below="@+id/title"
        android:layout_toEndOf="@+id/reaction_2"
        android:layout_alignEnd="@+id/video_thumbnail"/>

</RelativeLayout>