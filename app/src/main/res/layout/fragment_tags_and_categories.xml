<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    android:fitsSystemWindows="true"
    tools:context=".home.tagsAndCategories.TagsAndCategoryFragment">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:indeterminate="true"
        style="?android:attr/progressBarStyleLarge"
        android:theme="@style/ProgressBarTheme"
        android:layout_centerInParent="true" />

    <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
        android:id="@+id/no_friends_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:padding="@dimen/padding_half"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="@dimen/text_size_h4"
        android:text="@string/no_friends_yet"
        android:visibility="gone"/>

    <com.cncoding.teazer.customViews.ProximaNovaRegularAutoCompleteTextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:paddingTop="6dp"
        android:paddingStart="40dp"
        android:paddingEnd="@dimen/padding_half"
        android:hint="@string/type_a_name_to_tag"
        android:background="@drawable/bg_card_no_margin_grey"
        android:maxLines="1"
        android:singleLine="true"
        android:imeOptions="actionGo"
        app:drawableStartCompat="@drawable/ic_search_padded_left"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/clear"
        android:layout_width="54dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_clear_dark"
        android:scaleType="center"
        android:foreground="@drawable/ripple_dark_circle"
        android:layout_alignEnd="@+id/headerTextView"
        android:layout_alignBottom="@+id/headerTextView"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/padding_thin"/>

<!--    <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:textColor="@color/colorSecondary_text"
        android:textSize="@dimen/text_size_h4"
        android:clickable="true"
        android:focusable="true"
        android:paddingStart="62dp"
        android:paddingEnd="14dp"
        android:gravity="start|center_vertical"
        android:elevation="2dp" />-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tags_categories_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerTextView"
        tools:listitem="@layout/item_tags" />

    <com.cncoding.teazer.customViews.ProximaNovaSemiboldButton
        android:id="@+id/tags_categories_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:text="@string/save"
        android:theme="@style/AppTheme.RoundedMaterialButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>

</RelativeLayout>
