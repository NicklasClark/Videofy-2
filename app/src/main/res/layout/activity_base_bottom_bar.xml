<?xml version="1.0" encoding="utf-8"?>
<com.cncoding.teazer.customViews.NestedCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context="com.cncoding.teazer.BaseBottomBarActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_scrollFlags="scroll|enterAlways|snap"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="@android:color/white">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true">

                <com.cncoding.teazer.customViews.SignPainterTextView
                    android:id="@+id/toolbar_center_title"
                    android:layout_width="wrap_content"
                    android:layout_height="?android:attr/actionBarSize"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="@string/app_name"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_h3"
                    tools:ignore="PrivateResource,RelativeOverlap" />


                <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                    android:id="@+id/toolbar_plain_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="@dimen/padding_half"
                    android:layout_marginBottom="@dimen/padding_half"
                    android:padding="@dimen/padding_thin"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_content_big"
                    android:visibility="gone" />

                <!--<com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                    android:id="@+id/up_btn_with_title"
                    android:layout_width="wrap_content"
                    android:layout_height="?android:attr/actionBarSize"
                    app:drawableStartCompat="@drawable/ic_previous"
                    android:scaleType="center"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_content_big"
                    android:foreground="@drawable/ripple_dark_circle"
                    android:contentDescription="@string/up"
                    android:visibility="gone"
                    tools:ignore="RelativeOverlap" />-->

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--MAIN FRAGMENT CONTAINER-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:id="@+id/uploading_status_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:animateLayoutChanges="true"
                android:orientation="horizontal">

                <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
                    android:id="@+id/uploading_notification"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/ripple_dark_no_rounded"
                    android:textSize="@dimen/text_size_content"
                    android:paddingTop="@dimen/padding_half"
                    android:layout_weight="1"
                    android:paddingStart="@dimen/padding_default"
                    android:paddingEnd="@dimen/padding_default"/>

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/dismiss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:foreground="@drawable/ripple_dark_circle"
                    android:src="@drawable/ic_cancel_dark"
                    android:padding="@dimen/padding_half"/>

            </LinearLayout>

            <ProgressBar
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/progress_bar"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:indeterminate="false"
                style="?android:attr/progressBarStyleHorizontal"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/bottom_tab_layout"
        style="@style/BottomTabLayout"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_gravity="bottom"
        android:foreground="@drawable/ripple_dark_no_rounded_with_top_margin"
        android:background="@drawable/bg_bottom_drawer"
        app:tabBackground="?attr/selectableItemBackground">

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@null"
            android:tag="@string/title_home"
            android:icon="@drawable/ic_home_default" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@null"
            android:tag="@string/discover"
            android:icon="@drawable/ic_binoculars_default" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@null"
            android:visibility="invisible"/>

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@null"
            android:tag="@string/title_notifications"
            android:icon="@drawable/ic_notifications_default" />

        <android.support.design.widget.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@null"
            android:tag="@string/title_dashboard"
            android:icon="@drawable/ic_person_default" />

    </android.support.design.widget.TabLayout>

    <ImageButton
        android:id="@+id/camera_btn"
        android:layout_width="62dp"
        android:layout_height="64dp"
        android:foreground="@drawable/ripple_camera_button"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/ic_add_video"
        android:layout_marginBottom="@dimen/padding_10dp"
        android:background="@drawable/bg_circle_light_filled_outlined"
        android:contentDescription="@string/record_video" />

    <!--REACTION CAMERA FRAGMENT CONTAINER-->
    <!--    <FrameLayout
            android:id="@+id/camera_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />-->

</com.cncoding.teazer.customViews.NestedCoordinatorLayout>