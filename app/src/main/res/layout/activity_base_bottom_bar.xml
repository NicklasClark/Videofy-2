    <!--MAIN FRAGMENT CONTAINER-->
    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <RelativeLayout
        android:id="@+id/uploading_status_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/action_bar_height"
        android:background="@drawable/bg_card_no_margin_white">

        <com.cncoding.teazer.ui.customviews.common.CircularAppCompatImageView
            android:id="@+id/uploading_thumb"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="6dp"
            app:civ_border_color="@color/colorAccent4"
            app:civ_border_width="1dp"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/upload_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:paddingTop="12dp"
            android:paddingBottom="10dp"
            android:text="@string/uploading_your_video"
            android:textColor="@color/colorPrimary_text"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/uploading_thumb"/>

        <ProgressBar
            android:id="@+id/video_upload_progress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="gone"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/uploading_thumb"
            android:layout_below="@+id/upload_progress_text"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal" />

        <ProgressBar
            android:id="@+id/reaction_upload_progress"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="gone"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@+id/uploading_thumb"
            android:layout_below="@+id/video_upload_progress"
            style="@android:style/Widget.Material.Light.ProgressBar.Horizontal" />

    </RelativeLayout>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:blurOverlayColor="@color/colorTranslucentButton">

        <android.support.design.widget.TabLayout
            android:id="@+id/bottom_tab_layout"
            style="@style/BottomTabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:foreground="@drawable/ripple_dark_no_rounded_with_top_margin"
            app:tabBackground="?attr/selectableItemBackground">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/title_home"
                android:icon="@drawable/ic_home" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/discover"
                android:icon="@drawable/ic_discover"/>

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:visibility="gone"/>

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/title_notifications"
                android:icon="@drawable/ic_notifications" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/title_dashboard"
                android:icon="@drawable/ic_profile" />

        </android.support.design.widget.TabLayout>

    </eightbitlab.com.blurview.BlurView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/camera_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/ic_plus"
        android:scaleType="center"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:foreground="@drawable/ripple_light_circle"
        android:layout_marginBottom="@dimen/padding_10dp" />

    <ImageView
        android:id="@+id/btnToolbarBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_gravity="top|start"
        android:src="@drawable/ic_arrow_back_dark"
        android:visibility="gone"
        android:contentDescription="@string/back" />

</RelativeLayout>