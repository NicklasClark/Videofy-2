<?xml version="1.0" encoding="utf-8"?>
<com.cncoding.teazer.customViews.NestedCoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context="com.cncoding.teazer.BaseBottomBarActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            android:gravity="center"
            app:title="@null"
            android:theme="@style/GalaxyZooThemeToolbarDarkOverflow"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/toolbar_center_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/action_bar_height"
                    android:src="@drawable/ic_teazer_top"
                    android:textColor="@color/colorPrimary_text"
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/text_size_h3"
                    android:gravity="center"
                    tools:ignore="PrivateResource,RelativeOverlap"
                    android:contentDescription="@string/top_logo" />

                <ImageView
                    android:id="@+id/settings"
                    android:layout_width="@dimen/action_bar_height"
                    android:layout_height="@dimen/action_bar_height"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:foreground="@drawable/ripple_dark_circle"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:scaleType="center"
                    android:src="@drawable/ic_settings"
                    android:contentDescription="@string/settings"
                    android:visibility="invisible"/>

                <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                    android:id="@+id/toolbar_plain_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:padding="@dimen/padding_thin"
                    android:text="@string/discover"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorPrimary_text"
                    android:layout_marginStart="14dp"
                    android:layout_marginBottom="@dimen/padding_half"
                    android:layout_centerVertical="true"
                    android:visibility="invisible"/>

                <!--<com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
                    android:id="@+id/up_btn_with_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/action_bar_height"
                    app:drawableStartCompat="@drawable/ic_previous"
                    android:scaleType="center"
                    android:gravity="center_vertical"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/text_size_content_big"
                    android:foreground="@drawable/ripple_dark_circle"
                    android:contentDescription="@string/up"
                    android:visibility="gone"
                    tools:ignore="RelativeOverlap" />-->

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <!--MAIN FRAGMENT CONTAINER-->

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <eightbitlab.com.blurview.BlurView
        android:id="@+id/blur_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:blurOverlayColor="@color/colorTranslucentButton"
        android:layout_gravity="bottom|center_horizontal">

        <android.support.design.widget.TabLayout
            android:id="@+id/bottom_tab_layout"
            style="@style/BottomTabLayout"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/action_bar_height"
            android:foreground="@drawable/ripple_dark_no_rounded_with_top_margin"
            app:tabBackground="?attr/selectableItemBackground">

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/title_home"
                android:icon="@drawable/ic_home" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/discover"
                android:icon="@drawable/ic_discover"/>

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:visibility="invisible"/>

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/title_notifications"
                android:icon="@drawable/ic_notifications" />

            <android.support.design.widget.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="@null"
                android:tag="@string/title_dashboard"
                android:icon="@drawable/ic_profile" />

        </android.support.design.widget.TabLayout>

    </eightbitlab.com.blurview.BlurView>

    <com.cncoding.teazer.customViews.ProximaNovaBoldTextView
        android:id="@+id/camera_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:text="@string/plus"
        android:textSize="39sp"
        android:layout_gravity="bottom|center_horizontal"
        android:foreground="@drawable/ripple_light_circle"
        android:layout_marginBottom="@dimen/padding_10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_circle_light_filled_outlined"
        android:elevation="4dp"
        android:contentDescription="@string/record_video" />

</com.cncoding.teazer.customViews.NestedCoordinatorLayout>