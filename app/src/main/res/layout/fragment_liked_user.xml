    <RelativeLayout
        android:id="@+id/layoutclose"
        android:layout_width="match_parent"
        android:background="@drawable/bg_card_no_margin_white"
        android:layout_height="@dimen/action_bar_height">

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:textColor="@color/colorPrimary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:text="@string/title_likes"
            android:gravity="center_vertical|start"
            android:layout_marginStart="@dimen/action_bar_height" />

    </RelativeLayout>

    <TextView
        android:id="@+id/nousertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#cfcfcf"
        android:textSize="20dp"
        android:visibility="gone"
        android:layout_margin="10dp"
        android:maxLines="3"
        android:text="No one has liked this video yet"
        android:layout_centerInParent="true"/>


    <RelativeLayout
        android:id="@+id/layout"
        android:layout_below="@+id/layoutclose"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
