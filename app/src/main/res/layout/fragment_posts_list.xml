<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.cncoding.teazer.home.post.homepage.PostsListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/material_grey200"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/post_load_error_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="@dimen/padding_default"
        android:paddingBottom="@dimen/padding_double"
        android:foreground="@drawable/ripple_dark_no_rounded"
        android:layout_centerInParent="true"
        android:visibility="gone">

        <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/post_load_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/colorPrimary_text"
            android:textSize="@dimen/text_size_h6"
            android:text="@string/could_not_load_posts"/>

        <com.cncoding.teazer.customViews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/swipe_down_to_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/text_size_h6"
            android:text="@string/swipe_down_to_retry"/>

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <im.ene.toro.widget.Container
            android:id="@+id/post_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:name="HomeScreenPostList"
            android:paddingStart="0.25dp"
            android:paddingEnd="0.25dp"
            android:paddingTop="-6dp"
            android:paddingBottom="@dimen/padding_with_navigation_bar_height"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

<!--        <android.support.v7.widget.RecyclerView
