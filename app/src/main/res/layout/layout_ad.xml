<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:paddingLeft="@dimen/adContentPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/adIcon"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/adIcon"
            android:layout_toRightOf="@id/adIcon"
            android:layout_marginStart="@dimen/adContentPadding"
            android:layout_marginLeft="@dimen/adContentPadding"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
                android:id="@+id/adTitle"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatRatingBar
                android:id="@+id/adRating"
                android:visibility="gone"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
                android:id="@+id/adSponsored"
                android:text="@string/sponsored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/adContent"
        android:layout_marginTop="@dimen/adContentPadding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/adAction"
            android:paddingRight="@dimen/adContentPadding"
            android:gravity="end|center_vertical"
            android:background="@color/colorAccent"
            android:text="@string/react"
            android:drawableEnd="@drawable/ic_arrow_right"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_11_sp"
            android:foreground="@drawable/ripple_dark"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:visibility="gone"
            android:id="@+id/adDescription"
            android:layout_toLeftOf="@id/adAction"
            android:layout_toStartOf="@id/adAction"
            android:layout_centerVertical="true"
            android:maxLines="2"
            android:ellipsize="marquee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>