<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    android:background="@android:color/black"
    android:visibility="invisible">

    <ImageView
        android:id="@+id/post_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/bg_vignette"
        android:contentDescription="@string/post_thumbnail"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"
        android:contentDescription="@string/play_button" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:layout_alignParentTop="true">

        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_12sp"
            android:layout_marginEnd="@dimen/padding_half"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/category"/>

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#f48fb1"
            android:textSize="@dimen/text_size_9sp"
            android:paddingTop="@dimen/padding_x_thin"
            android:paddingBottom="@dimen/padding_x_thin"
            android:paddingStart="@dimen/padding_half"
            android:paddingEnd="@dimen/padding_half"
            android:gravity="center"
            android:background="@drawable/bg_outline_rounded"
            android:layout_marginStart="@dimen/padding_half"
            android:layout_alignParentEnd="true"
            android:visibility="gone"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/name_popularity_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:layout_alignParentBottom="true">

        <com.cncoding.teazer.customViews.CircularAppCompatImageView
            android:id="@+id/dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:layout_alignParentStart="true"/>

        <com.cncoding.teazer.customViews.ProximaNovaSemiboldTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:layout_toEndOf="@+id/dp"/>

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_like_outline_smaller"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/padding_x_thin"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@+id/dp"
            android:layout_below="@+id/name"/>

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_view_outline_smaller"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignTop="@+id/likes"
            android:layout_alignBottom="@+id/likes"
            android:layout_below="@+id/name"
            android:layout_toEndOf="@+id/likes"/>

    </RelativeLayout>

</RelativeLayout>