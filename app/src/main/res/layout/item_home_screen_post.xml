<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0.25dp"
    android:animateLayoutChanges="true"
    android:background="@color/colorDisabled">

    <RelativeLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:layout_alignParentBottom="true">

        <com.cncoding.teazer.ui.customviews.CircularAppCompatImageView
            android:id="@+id/shimmer_dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="6dp"
            android:src="@color/colorShimmer"
            android:layout_alignParentStart="true"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/shimmer_username"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:background="@color/colorShimmer"
            android:layout_toEndOf="@+id/shimmer_dp"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/shimmer_likes"
            android:layout_width="35dp"
            android:layout_height="10dp"
            android:textSize="@dimen/text_size_10sp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:background="@color/colorShimmer"
            android:layout_toEndOf="@+id/shimmer_dp"
            android:layout_below="@+id/shimmer_username"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/home_screen_post_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/post_thumbnail"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"/>

<!--    <ImageView
        android:id="@+id/play_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play"
        android:layout_centerInParent="true"
        android:alpha="0.6"
        android:contentDescription="@string/play_button" />-->

    <FrameLayout
        android:id="@+id/vignette_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vignette"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:visibility="invisible"
        android:layout_alignParentTop="true">

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/home_screen_post_caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginEnd="@dimen/padding_half"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/home_screen_post_category"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/home_screen_post_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:maxWidth="100dp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#f48fb1"
            android:textSize="@dimen/text_size_9sp"
            android:paddingTop="@dimen/padding_x_thin"
            android:paddingBottom="@dimen/padding_x_thin"
            android:paddingStart="@dimen/padding_half"
            android:paddingEnd="@dimen/padding_half"
            android:gravity="center"
            android:background="@drawable/bg_outline_rounded"
            android:layout_marginStart="@dimen/padding_half"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:visibility="invisible"
        android:layout_alignParentBottom="true">

        <com.cncoding.teazer.ui.customviews.CircularAppCompatImageView
            android:id="@+id/home_screen_post_dp"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:layout_alignParentStart="true"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/home_screen_post_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:layout_toEndOf="@+id/home_screen_post_dp"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_like_smaller"
            android:gravity="end|center_vertical"
            android:maxLines="1"
            android:padding="1dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/padding_x_thin"
            android:layout_marginEnd="6dp"
            android:layout_toEndOf="@+id/home_screen_post_dp"
            android:layout_below="@+id/home_screen_post_username"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_view_outline_smaller"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_alignTop="@+id/likes"
            android:layout_alignBottom="@+id/likes"
            android:layout_below="@+id/home_screen_post_username"
            android:layout_toEndOf="@+id/likes"/>

    </RelativeLayout>

</RelativeLayout>