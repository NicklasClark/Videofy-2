<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_half"
    android:paddingEnd="@dimen/padding_default"
    android:paddingTop="@dimen/padding_thin"
    android:paddingBottom="@dimen/padding_thin"
    android:gravity="center"
    android:foreground="@drawable/ripple_semi_dark_no_rounded"
    android:id="@+id/root_layout"
    android:animateLayoutChanges="true"
    android:orientation="horizontal">

    <com.cncoding.teazer.customViews.CircularAppCompatImageView
        android:id="@+id/username_dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/padding_half"
        android:layout_weight="0"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default"
            android:paddingTop="@dimen/padding_half"
            android:paddingBottom="@dimen/padding_thin"
            android:textSize="@dimen/text_size_content"
            android:gravity="center_vertical"/>

        <com.cncoding.teazer.customViews.ProximaNovaRegularTextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/padding_default"
            android:paddingEnd="@dimen/padding_default"
            android:paddingTop="@dimen/padding_thin"
            android:paddingBottom="@dimen/padding_half"
            android:textSize="@dimen/text_size_12sp"
            android:gravity="center_vertical"/>

    </LinearLayout>

    <com.cncoding.teazer.customViews.ProximaNovaBoldButton
        android:id="@+id/add_friend_btn"
        android:text="@string/add"
        style="@style/AppTheme.Chip"
        android:layout_weight="0"/>

</LinearLayout>