<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/material_grey200"
    android:layout_marginStart="7dp"
    android:layout_marginEnd="7dp"
    android:layout_marginBottom="8dp"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:layout_alignParentBottom="true">

        <com.cncoding.teazer.ui.customviews.CircularAppCompatImageView
            android:id="@+id/shimmer_dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="6dp"
            android:src="@color/colorShimmer"
            android:layout_alignParentStart="true"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/shimmer_username"
            android:layout_width="50dp"
            android:layout_height="10dp"
            android:textSize="@dimen/text_size_12sp"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@android:color/white"
            android:background="@color/colorShimmer"
            android:layout_toEndOf="@+id/shimmer_dp"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/shimmer_likes"
            android:layout_width="35dp"
            android:layout_height="10dp"
            android:textSize="@dimen/text_size_10sp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="6dp"
            android:background="@color/colorShimmer"
            android:layout_toEndOf="@+id/shimmer_dp"
            android:layout_below="@+id/shimmer_username"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/reaction_post_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:contentDescription="@string/post_thumbnail"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"/>

    <FrameLayout
        android:id="@+id/vignette_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_vignette"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"/>

    <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
        android:id="@+id/reaction_post_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:maxLines="1"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="@dimen/text_size_12sp"
        android:paddingTop="7dp"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingStart="@dimen/padding_half"
        android:paddingEnd="@dimen/padding_half"
        android:layout_marginEnd="@dimen/padding_thin">

        <com.cncoding.teazer.ui.customviews.CircularAppCompatImageView
            android:id="@+id/reaction_post_dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="6dp"
            android:layout_centerVertical="true"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaSemiBoldTextView
            android:id="@+id/reaction_post_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/text_size_12sp"
            android:textColor="@android:color/white"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/reaction_post_dp"
            android:layout_alignParentEnd="true"/>

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/reaction_post_likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:drawablePadding="4dp"
            android:paddingTop="2dp"
            android:layout_marginEnd="6dp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_like_smaller"
            android:gravity="start|center_vertical"
            android:layout_below="@+id/reaction_post_name"
            android:layout_toEndOf="@+id/reaction_post_dp" />

        <com.cncoding.teazer.ui.customviews.proximanovaviews.ProximaNovaRegularTextView
            android:id="@+id/reaction_post_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_10sp"
            android:drawablePadding="4dp"
            android:textColor="@android:color/white"
            app:drawableStartCompat="@drawable/ic_view_outline_smaller"
            android:gravity="start|center_vertical"
            android:paddingTop="@dimen/padding_x_thin"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_below="@+id/reaction_post_name"
            android:layout_toEndOf="@+id/reaction_post_likes"
            android:layout_alignBottom="@+id/reaction_post_likes"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>